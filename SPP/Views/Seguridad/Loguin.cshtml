<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset=" utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>.: Sistema Prestamo Personal</title>
    @Styles.Render("~/loguin/css")
    @Styles.Render("~/bootstrap/css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">
                    Inicia sesión para acceder
                    Sistema de Prestamo Personal
                </h1>
                <div class="account-wall">
                    <img class="profile-img" src="~/images/loginUser.png" alt="img_user">
                    <form class="form-signin" accept-charset="UTF-8" role="form"
                          method="POST" id="frmSeguridad" action="/Seguridad/Intranet">
                        <div class="form-group">
                            <input type="text" class="form-control" name="txtuser_name" id="txtuser_name"
                                   placeholder="usuario" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password"
                                   name="txt_password" id="txt_password">
                        </div>
                        <button id="btn_ingresar" class="btn btn-lg btn-primary btn-block" type="submit">
                            Ingresar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Jquery")
    @Scripts.Render("~/bootstrap/js")
    <!--<script src="~/Scripts/bootstrapValidator.js"></script>-->
    <script type="text/javascript" src="~/js/function-seguridad.js"></script>
</body>
</html>